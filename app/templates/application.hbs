
<div class="container">

  <header class="header clearfix">

    {{#bs-navbar
      type='dark rounded bg-dark'
      fluid=false
      collapsed=true
      onCollapse=(action (mut collapsed) true)
      onExpand=(action (mut collapsed) false)
      as |navbar|}}

      <div class="navbar-header">
        {{navbar.toggle}}
        {{#link-to 'index' class='navbar-brand'}}River-Chaser{{/link-to}}
      </div>

      {{#navbar.content}}
        {{#navbar.nav as |nav|}}
          {{#nav.item}}{{#nav.link-to 'index'}}Home{{/nav.link-to}}{{/nav.item}}
          {{#nav.item}}{{#nav.link-to 'reaches'}}Reaches{{/nav.link-to}}{{/nav.item}}
          {{#nav.item}}{{#nav.link-to 'map'}}Map{{/nav.link-to}}{{/nav.item}}
        {{/navbar.nav}}
      {{/navbar.content}}

    {{/bs-navbar}}

  </header>

  <main role="main">
    {{outlet}}
  </main>

  <footer class="footer text-muted">
    <p>{{#link-to 'index'}}Home{{/link-to}} | {{#link-to 'reaches'}}Reaches{{/link-to}} | {{#link-to 'map'}}Map{{/link-to}}</p>
  </footer>

</div>
