<div class="navtab-content">
  <h3>Overview</h3>

  {{#if model.abstract}}
    <p>
      {{model.abstract}}
    </p>
  {{else}}
    <p>
      {{#if model.longDescription}}
        {{format-markdown model.description100}} {{#link-to 'reach.detail' model.id}}&lt;read more&gt;{{/link-to}}
      {{else}}
        {{format-markdown model.description}}
      {{/if}}
    </p>
  {{/if}}

  {{outlet}}
</div>


